<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.swordfish.touchinput.views.SmallSingleButton
        android:id="@+id/gb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/gb_direction"
        app:layout_constraintEnd_toEndOf="@+id/gb_direction" />

    <com.swordfish.touchinput.views.SmallSingleButton
        android:id="@+id/gb_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/gb_actions"
        app:layout_constraintStart_toStartOf="@+id/gb_actions" />

    <com.swordfish.touchinput.views.ActionButtons
        android:id="@+id/gb_actions"
        style="@style/default_action_2"
        android:layout_width="@dimen/size_dial"
        android:layout_height="@dimen/size_dial"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlHardcoded" />

    <com.swordfish.touchinput.views.DirectionPad
        android:id="@+id/gb_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
