<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codebutler.retrograde">

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.RetrogradeApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.feature.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app.feature.game.GameLauncherActivity"
            android:launchMode="singleTop"
            android:theme="@style/GameTheme"/>

        <activity
            android:name=".app.feature.game.GameActivity"
            android:process=":game"
            android:launchMode="singleTop"
            android:theme="@style/GameTheme"/>

        <activity android:name=".app.feature.settings.StorageFrameworkPickerLauncher"/>
    </application>

</manifest>
